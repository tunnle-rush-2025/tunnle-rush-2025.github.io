{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["calculator/src/engine/*"],
      "@components/*": ["calculator/src/components/*"]
    }
  },
  "include": ["calculator/src", "vite.config.ts", "calculator/vitest.setup.ts", "calculator/**/*.test.ts*"],
  "references": []
}
